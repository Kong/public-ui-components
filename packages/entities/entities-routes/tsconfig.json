{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      // https://github.com/cypress-io/cypress/issues/27973
      "cypress/types/*": ["../../../node_modules/cypress/types/*"]
    },
    "outDir": "dist",
    "declarationDir": "dist/types",
    "types": [
      "node",
      "vite/client",
      "cypress",
      "cypress/vue",
      "../../../cypress/support"
    ],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "sandbox/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
