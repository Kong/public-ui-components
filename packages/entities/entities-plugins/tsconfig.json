{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declarationDir": "dist/types",
    "types": [
      "node",
      "vite/client",
      "cypress",
      "cypress/vue",
      "../../../cypress/support"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@freeform/*": [
        "src/components/free-form/shared/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "sandbox/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
