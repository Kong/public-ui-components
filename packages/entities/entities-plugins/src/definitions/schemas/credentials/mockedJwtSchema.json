{
  "fields": [
    {
      "id": {
        "uuid": true,
        "type": "string",
        "auto": true
      }
    },
    {
      "created_at": {
        "auto": true,
        "timestamp": true,
        "type": "integer"
      }
    },
    {
      "consumer": {
        "reference": "consumers",
        "type": "foreign",
        "on_delete": "cascade",
        "required": true
      }
    },
    {
      "key": {
        "auto": true,
        "hint": "A unique string identifying the credential. If left out, it will be auto-generated.",
        "required": false,
        "type": "string",
        "encrypted": true,
        "unique": true
      }
    },
    {
      "secret": {
        "auto": true,
        "hint": "If algorithm is HS256 or ES256, the secret used to sign JWTs for this credential. If left out, will be auto-generated.",
        "type": "string",
        "encrypted": true
      }
    },
    {
      "rsa_public_key": {
        "type": "string"
      }
    },
    {
      "algorithm": {
        "default": "HS256",
        "type": "string",
        "one_of": [
          "HS256",
          "HS384",
          "HS512",
          "RS256",
          "RS384",
          "RS512",
          "ES256",
          "ES384",
          "ES512",
          "PS256",
          "PS384",
          "PS512",
          "EdDSA"
        ]
      }
    },
    {
      "tags": {
        "elements": {
          "type": "string",
          "required": true
        },
        "type": "set"
      }
    }
  ]
}
