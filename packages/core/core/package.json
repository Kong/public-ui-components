{
  "name": "@kong-ui-public/core",
  "version": "1.10.6",
  "type": "module",
  "main": "./dist/core.umd.js",
  "module": "./dist/core.es.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/core.es.js",
      "require": "./dist/core.umd.js",
      "types": "./dist/types/index.d.ts"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "cross-env USE_SANDBOX=true vite",
    "build": "run-s typecheck build:package build:types",
    "build:package": "vite build -m production",
    "build:analyzer": "BUILD_VISUALIZER='core/core' vite build -m production",
    "build:types": "vue-tsc -p './tsconfig.build.json' --emitDeclarationOnly",
    "build:sandbox": "cross-env USE_SANDBOX=true vite build -m production",
    "preview": "cross-env USE_SANDBOX=true vite preview",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "stylelint": "stylelint --allow-empty-input './src/**/*.{css,scss,sass,less,styl,vue}'",
    "stylelint:fix": "stylelint --allow-empty-input './src/**/*.{css,scss,sass,less,styl,vue}' --fix",
    "typecheck": "vue-tsc -p './tsconfig.build.json' --noEmit",
    "test:unit": "cross-env FORCE_COLOR=1 vitest run",
    "test:unit:open": "cross-env FORCE_COLOR=1 vitest --ui"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kong/public-ui-components.git",
    "directory": "packages/core/core"
  },
  "homepage": "https://github.com/Kong/public-ui-components/tree/main/packages/core/core",
  "author": "Kong, Inc.",
  "license": "Apache-2.0",
  "volta": {
    "extends": "../../../package.json"
  },
  "distSizeChecker": {
    "errorLimit": "246KB"
  },
  "peerDependencies": {
    "axios": "^1.7.7",
    "vue": "^3.5.12"
  },
  "dependencies": {
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@kong/design-tokens": "1.17.3",
    "axios": "^1.7.7"
  }
}
