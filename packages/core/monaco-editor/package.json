{
  "name": "@kong-ui-public/monaco-editor",
  "version": "0.7.4",
  "type": "module",
  "description": "A kong UI Monaco Editor wrapper for Vue 3 with syntax highlighting powered by Shiki.",
  "main": "./dist/runtime/monaco-editor.umd.js",
  "module": "./dist/runtime/monaco-editor.es.js",
  "types": "./dist/types/src/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/runtime/monaco-editor.es.js",
      "require": "./dist/runtime/monaco-editor.umd.js",
      "types": "./dist/types/src/index.d.ts"
    },
    "./vite-plugin": {
      "import": "./dist/vite-plugin/index.js",
      "require": "./dist/vite-plugin/index.cjs",
      "types": "./dist/types/vite-plugin/index.d.ts"
    },
    "./package.json": "./package.json",
    "./dist/*": "./dist/*"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "cross-env USE_SANDBOX=true vite",
    "build": "pnpm run typecheck && run-p build:package build:plugin build:types",
    "build:package": "vite build -m production",
    "build:plugin": "vite build --config './vite-plugin/vite.config.ts'",
    "build:analyzer": "BUILD_VISUALIZER='core/monaco-editor' vite build -m production",
    "build:types": "vue-tsc -p './tsconfig.build.json' --emitDeclarationOnly",
    "build:sandbox": "cross-env USE_SANDBOX=true vite build -m production",
    "preview": "cross-env USE_SANDBOX=true vite preview",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "stylelint": "stylelint --allow-empty-input './src/**/*.{css,scss,sass,less,styl,vue}'",
    "stylelint:fix": "stylelint --allow-empty-input './src/**/*.{css,scss,sass,less,styl,vue}' --fix",
    "typecheck": "vue-tsc -p './tsconfig.build.json' --noEmit",
    "test:component": "BABEL_ENV=cypress cross-env FORCE_COLOR=1 cypress run --component -b chrome --spec './src/**/*.cy.ts' --project '../../../.'",
    "test:component:open": "BABEL_ENV=cypress cross-env FORCE_COLOR=1 cypress open --component -b chrome --project '../../../.'",
    "test:unit": "cross-env FORCE_COLOR=1 vitest run",
    "test:unit:open": "cross-env FORCE_COLOR=1 vitest --ui"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Kong/public-ui-components.git",
    "directory": "packages/core/monaco-editor"
  },
  "homepage": "https://github.com/Kong/public-ui-components/tree/main/packages/core/monaco-editor",
  "bugs": {
    "url": "https://github.com/Kong/public-ui-components/issues"
  },
  "author": "Kong, Inc.",
  "license": "Apache-2.0",
  "volta": {
    "extends": "../../../package.json"
  },
  "distSizeChecker": {
    "warningLimit": "200KB",
    "errorLimit": "300KB"
  },
  "peerDependencies": {
    "@kong-ui-public/i18n": "workspace:^",
    "@kong/icons": "^1.41.0",
    "@kong/kongponents": ">=9.42.0 <10.0.0",
    "monaco-editor": ">=0.52.0 <1.0.0",
    "shiki": ">=3.0.0 <4.0.0",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@kong-ui-public/i18n": "workspace:^",
    "@kong/design-tokens": "1.18.2",
    "@kong/icons": "^1.41.0",
    "@kong/kongponents": "9.49.0",
    "monaco-editor": "^0.55.1",
    "shiki": "^3.20.0",
    "vue": "^3.5.26"
  },
  "dependencies": {
    "@shikijs/monaco": "^3.20.0",
    "@vueuse/core": "^14.1.0",
    "shiki-codegen": "^3.20.0"
  }
}
