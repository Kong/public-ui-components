{
  "name": "@kong-ui-public/public-ui-components",
  "version": "0.0.0-development",
  "private": true,
  "scripts": {
    "build": "cross-env FORCE_COLOR=1 pnpm -r run build",
    "lint": "cross-env FORCE_COLOR=1 pnpm -r run lint",
    "lint:fix": "cross-env FORCE_COLOR=1 pnpm -r run lint:fix",
    "stylelint": "cross-env FORCE_COLOR=1 pnpm -r run stylelint",
    "stylelint:fix": "cross-env FORCE_COLOR=1 pnpm -r run stylelint:fix",
    "typecheck": "cross-env FORCE_COLOR=1 pnpm -r run typecheck",
    "test:component": "BABEL_ENV=cypress pnpm -r run test:component",
    "test:component:open": "BABEL_ENV=cypress cypress open --component -b chrome",
    "test:component:ci": "BABEL_ENV=cypress cypress run --component -b chrome",
    "test:unit": "cross-env FORCE_COLOR=1 pnpm -r run test:unit",
    "test:unit:open": "cross-env FORCE_COLOR=1 pnpm -r run test:unit:open",
    "create-package": "pnpm --filter \"@kong-ui-public/cli\" run create-package",
    "commit": "cz",
    "lerna": "lerna"
  },
  "devDependencies": {
    "@babel/types": "^7.28.5",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@digitalroute/cz-conventional-changelog-for-jira": "^8.0.1",
    "@evilmartians/lefthook": "^2.0.12",
    "@kong/design-tokens": "1.18.2",
    "@kong/eslint-config-kong-ui": "^1.6.0",
    "@kong/kongponents": "9.48.8",
    "@stylistic/stylelint-plugin": "^4.0.0",
    "@types/flat": "^5.0.5",
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.4",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitejs/plugin-vue-jsx": "^4.2.0",
    "@vitest/ui": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "c8": "^10.1.3",
    "commitizen": "^4.3.1",
    "cross-env": "^10.1.0",
    "cypress": "^13.17.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "js-yaml": "^4.1.1",
    "jsdom": "^27.3.0",
    "lerna": "^9.0.3",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "postcss-custom-properties": "^14.0.6",
    "postcss-html": "^1.8.0",
    "rimraf": "^6.1.2",
    "rollup-plugin-visualizer": "^5.14.0",
    "sass": "^1.97.1",
    "stylelint": "^16.26.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-recommended-scss": "^16.0.2",
    "stylelint-config-recommended-vue": "^1.6.1",
    "stylelint-order": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "~5.9.3",
    "uuid": "^11.1.0",
    "vite": "^5.4.21",
    "vite-plugin-externals": "^0.6.2",
    "vite-plugin-vue-devtools": "^7.7.9",
    "vitest": "^3.2.4",
    "vue": "^3.5.26",
    "vue-router": "^4.6.4",
    "vue-tsc": "^3.1.8"
  },
  "pnpm": {
    "overrides": {
      "string-width": "4.2.3",
      "vue": "$vue",
      "glob@<11.1.0": ">=11.1.0",
      "dompurify@<3.2.4": ">=3.3.1",
      "axios@>=1.0.0 <1.12.0": ">=1.13.2",
      "form-data@>=3.0.0 <3.0.4": ">=4.0.5",
      "mermaid@>=11.1.0 <11.10.0": ">=11.12.2",
      "mermaid@>=10.9.0-rc.1 <10.9.4": ">=10.9.5",
