{
  "markdown.extension.toc.levels": "2..3",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "editor.formatOnPaste": true,
  "editor.trimAutoWhitespace": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "files.insertFinalNewline": true,
  "eslint.format.enable": true,
  "eslint.validate": [
    "typescript",
    "javascript",
    "javascriptreact",
    "vue"
  ],
  "stylelint.validate": [
    "css",
    "postcss",
    "scss",
    "vue"
  ],
  "scss.scannerExclude": [
    "**/.git",
    "**/bower_components",
    "**/*/node_modules/@kong/design-tokens",
  ],
  "i18n-ally.enabledFrameworks": [
    "vue"
  ],
  "i18n-ally.keystyle": "nested",
  "i18n-ally.localesPaths": [
    "packages/core/i18n",
    "packages/analytics/analytics-chart/src/locales",
    "packages/analytics/analytics-metric-provider/src/locales",
    "packages/analytics/analytics-geo-map/src/locales",
    "packages/analytics/dashboard-renderer/src/locales",
    "packages/core/entities-config-editor/src/locales",
    "packages/core/documentation/src/locales",
    "packages/core/expressions/src/locales",
    "packages/core/i18n/sandbox/locales",
    "packages/core/forms/src/locales",
    "packages/core/misc-widgets/src/locales",
    "packages/entities/entities-consumer-credentials/src/locales",
    "packages/entities/entities-consumer-groups/src/locales",
    "packages/entities/entities-certificates/src/locales",
    "packages/entities/entities-consumers/src/locales",
    "packages/entities/entities-data-plane-nodes/src/locales",
    "packages/entities/entities-gateway-services/src/locales",
    "packages/entities/entities-key-sets/src/locales",
    "packages/entities/entities-keys/src/locales",
    "packages/entities/entities-plugins/src/locales",
    "packages/entities/entities-redis-configurations/src/locales",
    "packages/entities/entities-plugins-icon/src/locales",
    "packages/entities/entities-routes/src/locales",
    "packages/entities/entities-shared/src/locales",
    "packages/portal/document-viewer/src/locales",
    "packages/entities/entities-snis/src/locales",
    "packages/entities/entities-vaults/src/locales",
    "packages/entities/entities-upstreams-targets/src/locales",
    "packages/portal/spec-renderer/src/locales",
    "packages/core/cli/src/__template__/src/locales"
  ],
}
